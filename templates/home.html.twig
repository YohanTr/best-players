{% extends 'base.html.twig' %}

{% block title %}PlayerStats - Home{% endblock %}
{% block body %}
    <h1 class="text-center">Best Stats</h1>

    <form id="searchForm" class="d-flex">
        <input class="form-control me-2" type="search" placeholder="Search" aria-label="Search">
        <button class="btn btn-outline-success" type="submit">Search</button>
    </form>

    <div id="leadGoal" class="">
        <h2 class="">Top 5 scorer</h2>
        {% for playersGoals in playerGoals %}
        <ul class="list-group">
            <li class="list-group-item d-flex justify-content-between align-items-center">
                {{ playersGoals.name }}
                {{ playersGoals.club.name }}
                <span class="badge bg-primary rounded-pill">{{ playersGoals.goalScored }}</span>
            </li>
        </ul>
        {% endfor %}
    </div>

    <div id="leadPass" class="">
        <h2>Top 5 passer</h2>
        {% for playersKeyPasses in playerKeyPass %}
        <ul class="list-group">
            <li class="list-group-item d-flex justify-content-between align-items-center">
                {{ playersKeyPasses.name }}
                {{ playersKeyPasses.club.name }}
                <span class="badge bg-primary rounded-pill">{{ playersKeyPasses.keyPass }}</span>
            </li>
        </ul>
        {% endfor %}
    </div>

{% endblock %}
