{% extends 'base.html.twig' %}

{% block title %}PlayerStats - Home{% endblock %}
{% block body %}
    <h1 class="text-center">Best Stats</h1>
    <div id="searchForm">
        <form id="customSearch" action="">
            <input id="searchInput" type="search">
            <i class="fa fa-search"></i>
        </form>
    </div>

    <div id="mainStat">
    <table id="goalTable" class="table table-light">
        <thead>
        <tr>
            <th scope="col">Name</th>
            <th scope="col">Club</th>
            <th scope="col">Goals</th>
        </tr>
        </thead>
        <tbody>
        {% for playersGoals in playerGoals %}
            <tr>
                <td><a href="{{ path('player_show', { 'slug': playersGoals.slug }) }}">{{ playersGoals.name }}</a>
                </td>
                <td><a href="{{ path('club_show', { 'slug': playersGoals.club.slug }) }}">{{ playersGoals.club.name }}</a>
                </td>
                <td><span class="badge bg-secondary rounded-pill">{{ playersGoals.goalScored }}</span>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <table id="keyPassTable" class="table table-light">
        <thead>
        <tr>
            <th scope="col">Name</th>
            <th scope="col">Club</th>
            <th scope="col">Pass</th>
        </tr>
        </thead>
        <tbody>
        {% for playersKeyPasses in playerKeyPass %}
        <tr>
            <td><a href="{{ path('player_show', { 'slug': playersKeyPasses.slug }) }}">{{ playersKeyPasses.name }}</a>
            </td>
            <td><a href="{{ path('club_show', { 'slug': playersKeyPasses.club.slug }) }}">{{ playersKeyPasses.club.name }}</a>
            </td>
            <td><span class="badge bg-secondary rounded-pill">{{ playersKeyPasses.keyPass }}</span>
            </td>
        </tr>
        {% endfor %}
        </tbody>
    </table>
    </div>

{% endblock %}
