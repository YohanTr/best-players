{% extends 'base.html.twig' %}

{% block title %}Hello PlayerController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>Hello {{ player.name }}! ✅</h1>
    <h1>Hello {{ player.age }}! ✅</h1>
    <h1>Hello {{ player.club }}! ✅</h1>

    <p>
        {{ player.goalScored / player.gamePlayed |round(-2, 'floor') }} Goals/Games Ratio
    </p>

    <p>
        {{ player.keyPass / player.gamePlayed |round(-2, 'floor') }} Pass/Games Ratio
    </p>

</div>
{% endblock %}
